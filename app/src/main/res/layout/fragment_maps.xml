<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:requestLegacyExternalStorage="true"
    tools:context=".MapsFragment">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        map:cameraZoom="10" />

    <Button
        android:id="@+id/setPosButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="77dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rounded_edges_button"
        android:fontFamily="@font/ubuntu_medium"
        android:onClick="returnPos"
        android:text="Definir ponto de partida"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:backgroundTint="@color/mainOrange" />

    <androidx.cardview.widget.CardView
        android:id="@+id/eventCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:alpha="0.7"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/mainTitle"
                android:alpha="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="PONTO DE PARTIDA"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="30dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="30dp"
                android:alpha="1"
                android:text="Rua das fores"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/mainTitle" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
