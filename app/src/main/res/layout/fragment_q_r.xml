<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QRFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center|top" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/mainOrange"
            android:layout_height="wrap_content"></ProgressBar>

        <ImageView
            android:id="@+id/confirmationStatus"
            android:visibility="gone"
            android:layout_width="200dp"
            android:src="@drawable/baseline_check_circle_24"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center|top" />


        <TextView
            android:id="@+id/CorrectHitchhikeText"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:fontFamily="@font/ubuntu_light_italic"
            android:gravity="center"
            android:text="A boleia estÃ¡ correta"
            android:textColor="@color/dark_gray"
            android:textSize="25dp" />



    </LinearLayout>



    <Button
        android:id="@+id/createRideButton"
        android:layout_width="250dp"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edges_button"
        android:drawableEnd="@drawable/ic_baseline_people_24"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/confirmar_boleia"
        android:textSize="16dp"
        app:backgroundTint="@color/mainOrange" />


</FrameLayout>