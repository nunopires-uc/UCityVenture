<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QRFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center|top" />
    </LinearLayout>

    <Button
        android:id="@+id/createRideButton"
        android:layout_width="250dp"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edges_button"
        android:drawableEnd="@drawable/ic_baseline_people_24"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Confirmar Boleia"
        android:textSize="16dp"
        app:backgroundTint="@color/mainOrange" />


</FrameLayout>