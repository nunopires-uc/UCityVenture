<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRideFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/createRideMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="left"
                android:text="CRIAR"
                android:textColor="@color/black"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/createRideSubText"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/ubuntu_light_italic"
                android:gravity="left"
                android:text="CRIE A SUA VIAGEM!"
                android:textColor="@color/dark_gray"
                android:textSize="25dp" />


        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edges_bg"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/originInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:contentDescription="TODO" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edges_bg"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/destinationInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                android:contentDescription="TODO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <EditText
                android:id="@+id/licenseInput"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_edges_bg"
                android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="Matrícula"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textAllCaps="true"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/capacityInput"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edges_bg"
                android:drawableLeft="@drawable/ic_baseline_people_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="Lugares"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:textSize="20dp"
                />


        </LinearLayout>




            <EditText
                android:id="@+id/timeInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_edges_bg"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="Data e hora"
                android:inputType="datetime"
                android:textSize="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/locationInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edges_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_baseline_gps_fixed_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="Localização"
                android:inputType="datetime"
                android:paddingLeft="15dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/infoInput"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edges_bg"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_light_italic"
                android:hint="Informação (opcional)"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/createRideButton"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edges_button"
                android:drawableEnd="@drawable/ic_baseline_directions_car_24"
                android:fontFamily="@font/ubuntu_medium"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Criar boleia"
                android:textSize="16dp"
                app:backgroundTint="@color/mainOrange" />

    </LinearLayout>

</FrameLayout>